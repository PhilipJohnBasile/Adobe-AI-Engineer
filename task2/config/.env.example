# Adobe API Configuration - Primary
ADOBE_CLIENT_ID=your_adobe_client_id_here
ADOBE_CLIENT_SECRET=your_adobe_client_secret_here
ADOBE_ACCESS_TOKEN=your_adobe_access_token_here

# Adobe Firefly API
ADOBE_FIREFLY_API_KEY=your_adobe_firefly_key_here
ADOBE_FIREFLY_CLIENT_ID=your_adobe_firefly_client_id_here

# Adobe Sensei API
ADOBE_SENSEI_API_KEY=your_adobe_sensei_key_here
ADOBE_SENSEI_ENDPOINT=https://sensei-api.adobe.io

# Adobe Express API
ADOBE_EXPRESS_API_KEY=your_adobe_express_key_here

# Fallback Services
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_org_id_here

# Alternative GenAI Services (secondary fallback)
# AZURE_OPENAI_KEY=your_azure_key
# AZURE_OPENAI_ENDPOINT=your_azure_endpoint
# ANTHROPIC_API_KEY=your_anthropic_key

# Storage Configuration
STORAGE_TYPE=local  # local, azure, aws
STORAGE_PATH=./output

# Azure Storage (if using)
# AZURE_STORAGE_ACCOUNT=your_account
# AZURE_STORAGE_KEY=your_key
# AZURE_CONTAINER_NAME=creative-assets

# AWS S3 (if using)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_BUCKET_NAME=creative-assets
# AWS_REGION=us-east-1

# Brand Configuration
BRAND_LOGO_PATH=./assets/brand/logo.png
BRAND_COLORS=["#FF0000", "#00FF00", "#0000FF"]  # JSON array of hex colors
BRAND_FONTS=["Arial", "Helvetica"]

# Generation Settings  
DEFAULT_IMAGE_SIZE=1024x1024
QUALITY_THRESHOLD=0.8
MAX_GENERATION_ATTEMPTS=3

# Compliance Settings
ENABLE_CONTENT_FILTER=true
PROHIBITED_WORDS=["inappropriate", "banned"]  # JSON array

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/pipeline.log