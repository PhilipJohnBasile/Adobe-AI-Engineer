{
  "workflows": {
    "standard_campaign": {
      "name": "Standard Campaign Workflow",
      "description": "Default workflow for standard creative campaigns",
      "steps": [
        {
          "id": "validate_brief",
          "name": "Validate Campaign Brief",
          "type": "validation",
          "required": true,
          "timeout": 30,
          "retry_count": 2
        },
        {
          "id": "compliance_check", 
          "name": "Legal Compliance Check",
          "type": "compliance",
          "required": true,
          "timeout": 60,
          "retry_count": 1,
          "depends_on": ["validate_brief"]
        },
        {
          "id": "generate_assets",
          "name": "Generate Creative Assets", 
          "type": "generation",
          "required": true,
          "timeout": 300,
          "retry_count": 3,
          "depends_on": ["compliance_check"]
        },
        {
          "id": "localize_campaign",
          "name": "Localize for Markets",
          "type": "localization", 
          "required": false,
          "timeout": 120,
          "retry_count": 2,
          "depends_on": ["generate_assets"]
        },
        {
          "id": "quality_check",
          "name": "Brand Quality Assessment",
          "type": "brand_intelligence",
          "required": true,
          "timeout": 90,
          "retry_count": 1,
          "depends_on": ["localize_campaign"]
        }
      ]
    },
